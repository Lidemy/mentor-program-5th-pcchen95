    </section>
  </div>
  <div class="hide prize__main">
    <section class="prize__section">
      <div class="prize__name"><h2></h2></div>
      <div class="prize__content"><h3></h3></div>
      <div class="lottery-again">
        <button type="submit" class="draw-btn">再抽一次</button>
      </div>
    </section>
  </div>
  <footer>
    <%- include('template/footer') %>
