<!DOCTYPE html>

<html>
<head>
  <%- include('../../template/header') %>
  <title>常見問題管理 - Just A Bite!</title>
  <link rel="stylesheet" href="/css/style-admin.css"> 
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
  <%- include('../../template/navbar_admin') %>

  <div class="admin__main-area">
    <section class="admin__section">
      <nav style="--bs-breadcrumb-divider: '>';">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">後台首頁</a></li>
          <li class="breadcrumb-item active">常見問題管理</li>
        </ol>
      </nav>
      <h2 class="section__title mb-4">
        常見問題管理
      </h2>
      <% if (errMessage && errMessage.length > 0) { %>
        <div class="alert alert-danger" role="alert">
          <%= errMessage %>
        </div>
      <% } %>
      <div class="admin__add-item">
        <a href="/order_faq" class="btn btn-secondary">編輯順序</a>
        <a href="/add_faq" class="btn btn-secondary">新增問答</a>
      </div> 
      <% 
        let i = 0
        items.forEach(item => { 
      %>
        <div class="card mt-2">
          <div class="card-header">
            Q<%= i + 1 %>. <%= item.question %>
          </div>
          <div class="card-body">
            <p class="card-text">
              <%= item.answer.slice(0, 150) %>
              <%= item.answer.length > 150 ? ' ......' : '' %>
            </p>
            <a href="/update_faq/<%= item.id %>" class="btn btn-primary btn-sm">編輯</a>
            <a href="/delete_faq/<%= item.id %>" class="btn btn-primary btn-sm">刪除</a>
          </div>
        </div>
      <% i ++
        }) 
      %>
    </section>
  </div>
  <footer>
    <%- include('../../template/footer') %>
  </footer>
</body>
</html>