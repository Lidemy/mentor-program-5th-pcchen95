<!DOCTYPE html>

<html>
<head>
  <%- include('../../template/header') %>
  <title>後台 - Just A Bite!</title>
  <link rel="stylesheet" href="/css/style-admin.css"> 
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
  <%- include('../../template/navbar_admin') %>

  <div class="admin__main-area">
    <section class="admin__section">
      <nav style="--bs-breadcrumb-divider: '>';">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">後台首頁</a></li>
          <li class="breadcrumb-item"><a href="/faq_management">常見問題管理</a></li>
          <li class="breadcrumb-item active">編輯</li>
        </ol>
      </nav>
      <h2 class="section__title mb-4">
        編輯問答
      </h2>
      <% if (errMessage && errMessage.length > 0) { %>
        <div class="alert alert-danger" role="alert">
          <%= errMessage %>
        </div>
      <% } %>

      <form method="POST" action="/update_faq/<%= item.id %>" >    
        <div class="mb-3">
          <label class="form-label">問題</label>
          <input type="text" class="form-control" name="question" value="<%= item.question %>">
        </div>
        <div class="mb-3">
          <label class="form-label">回答</label>
          <textarea class="form-control faq-anser__input" name="answer" ><%= item.answer %></textarea>
        </div>
        <div class="text-center">
          <button type="submit" class="btn btn-primary">送出</button>
          <button type="button" onclick="window.history.back();" class="btn btn-secondary">返回</button>
        </div>
      </form>
    </section>
  </div>

  <%- include('../../template/footer') %>
</body>
</html>