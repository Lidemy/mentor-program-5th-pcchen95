<!DOCTYPE html>

<html>
<head>
  <%- include('../../template/header') %>
  <title>後台 - Just A Bite!</title> 
  <link rel="stylesheet" href="/css/style-admin.css"> 
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>

<body>
  <%- include('../../template/navbar_admin') %>

  <div class="admin__main-area">
    <section class="admin__section">
      <nav style="--bs-breadcrumb-divider: '>';">
        <ol class="breadcrumb">
          <li class="breadcrumb-item"><a href="/admin">後台首頁</a></li>
          <li class="breadcrumb-item active">菜單管理</li>
        </ol>
      </nav>
      <h2 class="section__title mb-4">
        菜單管理
      </h2>
      <% if (errMessage && errMessage.length > 0) { %>
        <div class="alert alert-danger" role="alert">
          <%= errMessage %>
        </div>
      <% } %>
      <div class="admin__add-item">
        <a href="/add_menu" class="btn btn-secondary">新增品項</a>
      </div> 
      <table class="table table-hover">
        <thead>
          <tr>
            <th class="menu-img">品項</th>
            <th class="menu-name">名稱</th>
            <th class="menu-price">價格</th>
            <th class="menu-btn"></th>
            <th class="menu-btn"></th>
          </tr>
        </thead>
        <tbody>
          <% items.forEach(item => { %>
          <tr>
            <td class="menu-img">
              <img class="menu-img__preview" src="<%= item.img %>">
            </td>
            <td class="menu-name"><%= item.name %></td>
            <td class="menu-price">
              <div class="menu-price__field"><%= item.price %></div>
            </td>    
            <td class="menu-btn">
              <a href="/update_menu/<%= item.id %>" class="btn btn-primary btn-sm">編輯</a>
            </td>
            <td class="menu-btn">
              <a href="/delete_menu/<%= item.id %>" class="btn btn-primary btn-sm">刪除</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </section>
  </div>
  <footer>
    <%- include('../../template/footer') %>
  </footer>
</body>
</html>